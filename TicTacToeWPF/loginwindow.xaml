<Window 
    x:Class="TicTacToeWPF.loginwindow"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicTacToeWPF"
        mc:Ignorable="d"
        Title="Название сессии" Height="260" Width="450" Closing="close" Icon="/tic-tac-toe.png">
    <Grid Width="450" Margin="0,0,0,-29">
        <TextBox x:Name="tb_session" HorizontalAlignment="Center" Margin="0,86,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Height="35"/>
        <Button x:Name="button_session" Content="Принять" HorizontalAlignment="Center" Margin="0,149,0,0" VerticalAlignment="Top"  Click="button_session_Click" Background="LightBlue" Width="150" Height="49"/>
        <Label Content="Введите название сессии" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top" FontSize="20"/>

    </Grid>
</Window>
